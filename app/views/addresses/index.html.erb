<div class="page-header">
  <%= link_to new_address_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Address
  <% end %>
  <h1>Listing addresses</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Type</th>
      <th>Street</th>
      <th>Complement</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Neighbourhood</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @addresses.each do |address| %>
    <tr>
      <td><%= address.type %></td>
      <td><%= address.street %></td>
      <td><%= address.complement %></td>
      <td><%= address.city %></td>
      <td><%= address.state %></td>
      <td><%= address.postal_code %></td>
      <td><%= address.Neighbourhood %></td>
      <td><%= link_to 'Show', address %></td>
      <td><%= link_to 'Edit', edit_address_path(address) %></td>
      <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>
