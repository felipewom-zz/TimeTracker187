<h2>Cadastrar</h2>

<%= form_for(resource,
                    :as => resource_name,
                    :url => registration_path(resource_name),
                    :html => { :class => 'form-inline' }) do |f| %>
    <%= devise_error_messages! %>
  <div class="form-inputs">
    <%= f.text_field :username, :required => true, :placeholder => 'Nome do usuÃ¡rio' , :autofocus => true %>
    <%= f.text_field :first_name, :required => true, :placeholder => 'Nome', :autofocus => true %>
    <%= f.text_field :last_name, :required => true, :placeholder => 'Sobrenome', :autofocus => true %>
    <%= f.text_field :email, :required => true, :placeholder => 'Email', :autofocus => true %>
    <%= f.text_field :phone, :required => true, :placeholder => 'Telefone', :onkeypress => 'mask(this, mphone);', :onblur => 'mask(this, mphone);', :autofocus => true %>
    <%= f.text_field :password, :type => :password, :required => true, :placeholder => 'Senha' %>
    <%= f.text_field :password_confirmation, :type => :password, :required => true, :placeholder => 'ConfirmaÃ§Ã£o de Senha' %>
  </div>
  <br>
  <div class="form-inputs">
    <%= f.submit 'Cadastrar', :class => 'btn btn-primary' %>
  </div>
<% end %>

