<%= simple_form_for(@project, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status %>
    <%= f.input :hourly_rate %>
    <%= f.input :description %>
    <%= f.input :area %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :client_id,
                :collection => Client.all(:order => 'name')%> %>
    <%= f.input :whiteboard %>
    <%= f.input :url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
