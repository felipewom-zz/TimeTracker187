<div class="page-header">
  <%= link_to projects_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_project_path(@project), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing projects</h1>
</div>

<dl>
  <dt>Name:</dt>
  <dd><%= @project.name %></dd>

  <dt>Status:</dt>
  <dd><%= @project.status.name %></dd>

  <dt>Rate:</dt>
  <dd>R$ <%= @project.hourly_rate %></dd>

  <dt>Description:</dt>
  <dd><%= @project.description %></dd>

  <dt>Area:</dt>
  <dd><%= @project.area %></dd>

  <dt>Start date:</dt>
  <dd><%= @project.start_date.strftime("%B %d, %Y") or nil %></dd>

  <dt>End date:</dt>
  <dd><%= @project.end_date.strftime("%B %d, %Y") or nil %></dd>

  <dt>Client:</dt>
  <dd><%= @project.client.name %></dd>

  <dt>Whiteboard:</dt>
  <dd style="background-color: #ffffff; min-height: 100px;"><%= @project.whiteboard %></dd>

  <dt>Url:</dt>
  <dd><%= @project.url %></dd>

</dl>
