<div class="page-header">
  <%= link_to statuses_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_status_path(@status), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing statuses</h1>
</div>

<dl>
  <dt>Name:</dt>
  <dd><%= @status.name %></dd>

  <dt>Description:</dt>
  <dd><%= @status.description %></dd>

  <dt>Model:</dt>
  <dd><%= @status.model %></dd>

</dl>
