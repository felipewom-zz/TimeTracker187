<%= simple_form_for(@task, :defaults => {:input_html => {:class => 'input-xlarge'}}) do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.input :title %>
    <%= f.input :note %>
    <%= f.input :completed, :as => :string,
                :input_html => {:class => 'datepicker',
                                :value => @task.completed.present? ? localize(@task.completed,
                                                                             :format => '%d/%m/%Y') : nil} %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
<script type="text/javascript">
  var nowTemp = new Date();
  var now = nowTemp.getDate() + "/" + (1+nowTemp.getMonth()) + "/" + nowTemp.getFullYear();
  $('.datepicker').val(now);
  $('.datepicker').datepicker({
    format: 'dd/mm/yyyy',
    startDate: '-0d',
    todayBtn: true,
    language: "pt-BR",
    setDate: new Date(),
    autoclose: true,
    update: new Date()
  });
</script>