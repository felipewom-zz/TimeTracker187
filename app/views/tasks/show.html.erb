<div class="page-header">
  <%= link_to tasks_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_task_path(@task), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing tasks</h1>
</div>

<dl>
  <dt>Title:</dt>
  <dd><%= @task.title %></dd>

  <dt>Note:</dt>
  <dd><%= @task.note %></dd>

  <dt>Created by:</dt>
  <dd><%= @task.user.to_s %></dd>

</dl>
