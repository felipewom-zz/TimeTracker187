<%= form_for(@users_team,
                    :defaults => {
                            :input_html => {
                                    :class => 'form-inline' } }) do |f| %>
    <% if @users_team.errors.any? %>
        <ul>
          <% @users_team.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <div class="control-group">
      <div class="control-label">Usu√°rio<i class="icon-arrow-right"></i>Time</div>
      <div class="controls">
        <%= f.collection_select :user_id,
                    User.all, :id, :to_s,
                    :selected => @users_team.user%>

        <%= f.collection_select :team_id,
                    Team.all, :id, :name,
                    :selected => @users_team.team  %>
      </div>
    </div>
    <div class="form-inputs">
    <%= f.submit 'Salvar', :class => "btn btn-primary" %>
    </div>
<% end %>
