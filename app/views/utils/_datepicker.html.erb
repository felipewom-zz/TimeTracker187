<script type="text/javascript">
  var nowTemp = new Date();
  if (nowTemp.getDate() < 10){
    var day = '0'+nowTemp.getDate()+'';
  }else{
    var day = nowTemp.getDate();
  };
  if ((1+nowTemp.getMonth()) < 10) {
    var month = '0' + (1 + nowTemp.getMonth())+'';
  }else {
    var month = 1 + nowTemp.getMonth();
  };
  var now = day + "/" + month + "/" + nowTemp.getFullYear();
  $('.datepicker').val(now);
  $('.datepicker').datepicker({
      format: 'dd/mm/yyyy',
      todayBtn: true,
      language: "pt-BR",
      setDate: new Date(),
      autoclose: true,
      update: new Date()
  });
</script>